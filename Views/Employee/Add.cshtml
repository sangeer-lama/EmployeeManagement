    <div class="form-group">
      <label asp-for="Gender">Gender</label>
      <textarea type="text" class="form-control" asp-for="Gender" aria-describedby="emailHelp"
        placeholder="Gender"></textarea>

    </div>




    <div class="form-group">
      <label asp-for="Salary">Salary</label>
      <input type="number" class="form-control" asp-for="Salary" aria-describedby="emailHelp" placeholder="Salary">

    </div>

    <button type="submit" class="btn btn-primary">Add Employees</button>
  </form>